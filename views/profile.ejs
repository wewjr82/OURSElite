<%- include('partials/header') -%>

<div class="container">
  <div class="row mt-5">
    <!-- Left Column: User Profile and Community Info -->
    <div class="col-lg-4">
      <!-- User Information -->
      <div>
        <p><strong>Company Name</strong>: <%= user.companyName %></p>
        <p><strong>Owner</strong>: <%= user.owner %></p>
        <p><strong>Industry</strong>: <%= user.industry %></p>
        <p><strong>State</strong>: <%= user.state %></p>
        <p><strong>Company Email</strong>: <%= user.email %></p>
        <p><strong>About Company</strong>: <%= user.about %></p>
        <a
          href="/logout"
          class="btn"
          style="color: white; background-color: #45526e"
          >Logout</a
        >
      </div>
      <!-- End of User Information -->

      <!-- Create Post Section -->
      <div class="mt-5">
        <h2 style="color: #45526e">Create Post</h2>
        <form
          action="/post/createPost"
          enctype="multipart/form-data"
          method="POST"
        >
          <div class="mb-3">
            <label for="imageUpload" class="form-label">Image</label>
            <input
              type="file"
              class="form-control"
              id="imageUpload"
              name="file"
            />
          </div>
          <div class="mb-3">
            <label for="caption" class="form-label" style="color: #45526e"
              >Caption</label
            >
            <textarea
              class="form-control"
              id="caption"
              name="caption"
              required
            ></textarea>
          </div>
          <button
            type="submit"
            class="btn"
            style="color: white; background-color: #45526e"
            value="Upload"
          >
            Submit
          </button>
        </form>
        <br /><br />
      </div>
    </div>

    <!-- Right Column: Recent Posts and Community Feed -->
    <div class="col-lg-8">
      <div class="row justify-content-center">
        <!-- Centering the recent posts section -->
        <!-- Recent Posts Section -->
        <div class="col-md-10">
          <h2 class="text-center" style="color: #45526e">Recent Posts</h2>
          <br />
          <div class="row justify-content-center">
            <% for(var i = 0; i < posts.length; i++) { %>
            <div class="col-lg-6 mb-4">
              <a href="/post/<%= posts[i]._id %>">
                <img class="img-fluid" src="<%= posts[i].image %>" />
              </a>
            </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Calendar Section -->
      <div id="calendar"></div>

      <!-- Community Feed (Centered) -->
      <div class="col-md-12 mt-4 text-center">
        <h2 style="color: #45526e">Community Feed</h2>
        <!-- Displaying Community Posts or Activities -->
        <!-- Add your community feed content here -->
        <a
          href="/feed"
          class="btn"
          style="color: white; background-color: #45526e"
          >View Community Feed</a
        >
      </div>
      <br /><br />
    </div>
  </div>
</div>

<%- include('partials/footer') -%>


