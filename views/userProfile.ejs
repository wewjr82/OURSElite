<%- include('partials/header') -%>

<div class="container mt-5">
  <div class="row">
    <!-- Left Column: User Profile -->
    <div class="col-lg-4">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title" style="color: #3b5998">
            <%= user.companyName %>
          </h5>
          <hr />
          <p class="card-text"><strong>Owner:</strong> <%= user.owner %></p>
          <p class="card-text">
            <strong>Industry:</strong> <%= user.industry %>
          </p>
          <p class="card-text"><strong>State:</strong> <%= user.state %></p>
          <p class="card-text">
            <strong>Company Email:</strong> <%= user.email %>
          </p>
          <p class="card-text">
            <strong>About Company:</strong> <%= user.about %>
          </p>
        </div>
      </div>
    </div>

    <!-- Right Column: Recent Posts and Community Feed -->
    <div class="col-lg-8">
      <!-- Recent Posts Section -->
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title" style="color: #3b5998">Recent Posts</h5>
          <div class="row">
            <% for(var i = 0; i < posts.length; i++) { %>
            <div class="col-lg-6 mb-4">
              <a href="/post/<%= posts[i]._id %>" class="card">
                <img
                  class="card-img-top"
                  src="<%= posts[i].image %>"
                  alt="Post Image"
                />
                <div class="card-body">
                  <p class="card-text"><%= posts[i].caption %></p>
                </div>
              </a>
            </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Return to Feed/Profile Section -->
      <div class="row justify-content-center mt-5" style="margin-bottom: 20px;">
        <div class="col-6">
          <div class="mx-auto text-center">
            <a
              class="btn btn-secondary"
              href="/profile"
              style="color: white; background-color: #45526e"
              >Return to Profile</a
            >
            <a
              class="btn btn-secondary"
              href="/feed"
              style="color: white; background-color: #45526e"
              >Return to Feed</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
